<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="mysqlTables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>
        <!--数据库连接信息-->
        <jdbcConnection driverClass="oracle.jdbc.driver.OracleDriver"
                        connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                        userId="scott"
                        password="tiger">
        </jdbcConnection>
        <!--产生model或entity的类， targetProject指明java源文件路径即可，targetPackage
        指明包的全路径-->
        <javaModelGenerator targetPackage="cn.edu.wzut.entity"
                            targetProject="src/main/java/">
        </javaModelGenerator>
        <!--产生带注解的mapper类， targetProject指明java源文件路径即可，targetPackage指
        明包的全路径-->
        <javaClientGenerator type="ANNOTATEDMAPPER"
                             targetPackage="cn.edu.wzut.mapper" targetProject="src/main/java/">
        </javaClientGenerator>
        <!--罗列要生成代码的表名称-->
        <table schema="scott" tableName="sys_%"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true">
            <generatedKey column="id" sqlStatement="select seq_id.nextval from
dual" identity="false"/>
        </table>
    </context>
</generatorConfiguration>